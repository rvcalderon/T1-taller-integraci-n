<p id="notice"><%= notice %></p>
<td><%= link_to 'Admin', admin_path %></td>
<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Drop</th>
      <th>Body</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.author %></td>
        <td><%= article.drop %></td>
        <td><%= truncate(article.body, length: 1000, separator: ' ') %></td>
        <td><%= article.comments.count %></td>
        <td><%= link_to 'Show', article %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

